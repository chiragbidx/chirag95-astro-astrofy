---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { title, includeSidebar = true, sideBarActiveItemID } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? title + " | Chirag Dodiya" : "Chirag Dodiya"}</title>
    <meta name="description" content="Senior Bubble Developer, portfolio, blog, and projects of Chirag Dodiya." />
    <meta property="og:title" content={title ? title + " | Chirag Dodiya" : "Chirag Dodiya"} />
    <meta property="og:description" content="Senior Bubble Developer, portfolio, blog, and projects of Chirag Dodiya." />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/images/og-default.jpg" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-base-100 text-base-content min-h-screen flex flex-col">
    <header>
      <Navbar activeItemID={sideBarActiveItemID} />
    </header>
    <main class="flex-1 w-full max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>